<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="CIDAR" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.cidarlab.web.UserInformation</class>
    <properties>
      <property name="javax.persistence.jdbc.driver"     value="org.apache.derby.jdbc.EmbeddedDriver" />
      <property name="javax.persistence.jdbc.url"        value="jdbc:derby:cidar;create=true" />
      <property name="javax.persistence.jdbc.user"       value="" />
      <property name="javax.persistence.jdbc.password"   value="" />
      <property name="eclipselink.ddl-generation"        value="create-tables" />
    </properties>
  </persistence-unit>

  <persistence-unit name="TEST" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.cidarlab.web.UserInformation</class>
    <properties>
      	<property name="javax.persistence.jdbc.driver"     value="org.apache.derby.jdbc.EmbeddedDriver" />
      	<property name="javax.persistence.jdbc.url"        value="jdbc:derby:test;create=true" />
      	<property name="javax.persistence.jdbc.user"       value="" />
      	<property name="javax.persistence.jdbc.password"   value="" />
		<property name="eclipselink.ddl-generation" 		value="drop-and-create-tables" />
	</properties>
  </persistence-unit>

</persistence>